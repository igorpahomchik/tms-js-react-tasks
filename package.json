{
  "name": "react_todo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "concurrently --names \"JS,REACT\" -c \"bgYellow.bold,bgBlue.bold\" \"npm run build:js -- --watch\" \"react-scripts start\"",
    "build": "npm run build:js && react-scripts build",
    "build:js": "rollup -c --bundleConfigAsCjs",
    "serve": "npm run build && serve -s build -l 4000",
    "test": "react-scripts test --verbose --watchAll",
    "test:nowatch": "npm run test -- --watchAll=false",
    "lint": "eslint --ext .js --max-warnings 0 --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "prepare": "husky install",
    "eject": "react-scripts eject"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "concurrently": "^7.6.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "rollup": "^3.15.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "serve": "^14.2.0"
  }
}
